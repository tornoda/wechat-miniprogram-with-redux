/* cityList.wxss */
/* 编辑按钮样式 */
.city-edit {
  text-align: right;
}
.city-edit-btn {
  display: inline-block;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  line-height: 54rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
}
/* 城市列表样式 */
.city-list {
  width: 630rpx;
  margin: 0 auto;
  margin-top: 14rpx;
  /* overflow: hidden; */
}
/* 输入框 */
.city-form {
  transition: all 0.3s;
  text-align: center;
  display: block;
  margin-top: 40rpx;
}
.city-input {
  vertical-align: middle;
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  overflow: hidden;
  margin: 0 auto;
  transition: all 0.3s;
}
.city-input-inner {
  width: 530rpx;
}
.city-name {
  width: 400rpx;
  font-size: 24rpx;
  text-align: center;
  display: inline-block;
  height: 80rpx;
  background-color: #2f80d1;
  transition: width 0.2s;
  vertical-align: middle;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}
/* 提交按钮 */
.city-button-plus {
  position: relative;
  display: inline-block;
  /* width: 80rpx;
  height: 80rpx; */
}
.city-button {
  display: inline-block;
  text-align: center;
  background-color: #2f80d1;
  color: #ffffff;
  font-size: 32rpx;
  border-style: none;
  border-color: #6c8eb1;
  padding-left: 0;
  padding-right: 0;
  height: 80rpx;
  width: 130rpx;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  border-top-left-radius:0;
  border-bottom-left-radius: 0;
  line-height: 80rpx;
  vertical-align: middle;
  transition: all 0.3s;
}
.city-cross {
  position: relative;
  width:0;
  height: 0;
  z-index: 1;
  left: 24rpx;
  top: -39rpx;
  overflow: visible;
}
.plus-h {
  width: 50rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background-color: #fff;
  position: absolute;
  left: -8rpx;
  top: -6rpx;
}
.plus-v {
  width: 12rpx;
  height: 50rpx;
  background-color: #fff;
  position: absolute;
  top: -25rpx;
  left: 10rpx;
  border-radius: 6rpx;
}